@model SystemLotowMK.Domain.Entities.Flight
@{
    ViewData["Title"] = "Flight Page";
}

<div class="text-center">
    <h1 class="display-4">Flights</h1>
    <div class="card">
        <div class="card-body align-content-center">
            <h5 class="card-title">Are you sure you want to book it?</h5>
            <p class="card-text">You can book a flight by clicking the button below.</p>
            @Html.ActionLink("Book", "Reserve", "Reservation", new { flightId=Model.Id }, new { @class = "btn btn-primary"})
        </div>
    </div>
</div>